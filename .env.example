# Environment Variables Template
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ragkit?schema=public"

# Test Database Configuration
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/ai_memory_system_test?schema=public"

# Vector Database Configuration
SUPABASE_URL="your-supabase-url"
SUPABASE_KEY="your-supabase-key"

# AI Model Configuration
MODEL_PATH="models/mistral-7b"
MODEL_CACHE_DIR="cache/models"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Security Configuration
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-encryption-key"

# Memory System Configuration
MEMORY_CONSOLIDATION_INTERVAL="3600000" # 1 hour in milliseconds
MEMORY_IMPORTANCE_THRESHOLD="0.7"
VECTOR_DIMENSION="1536" # Mistral embedding dimension

# Performance Configuration
MAX_CONCURRENT_REQUESTS="10"
REQUEST_TIMEOUT="30000" # 30 seconds in milliseconds
CACHE_TTL="3600" # 1 hour in seconds

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING="true"
ENABLE_ERROR_TRACKING="true"
LOG_LEVEL="info"

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=True

# AI Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAIN_MODEL=mistral-7b-instruct-v0.2
QUANTIZATION=8bit
USE_GPU=True
GPU_LAYERS=32

# Vector Database
VECTOR_DB_TYPE=pinecone  # Options: pinecone, faiss, pgvector
VECTOR_DB_API_KEY=your_api_key_here
VECTOR_DB_ENVIRONMENT=us-west1-gcp
VECTOR_DB_INDEX_NAME=my-index

# Security
SECRET_KEY=replace_with_secure_random_string
JWT_EXPIRATION_MINUTES=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_TELEMETRY=False
SENTRY_DSN= 

# Ollama API - local LLM
OLLAMA_URL="http://localhost:11434"

# Search API (optional)
# SERPER_API_KEY=""

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"  # Generate with: openssl rand -base64 32 